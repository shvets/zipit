# -*- encoding: utf-8 -*-

require File.expand_path(File.dirname(__FILE__) + '/lib/zipit/version')

Gem::Specification.new do |spec|
  spec.name          = "zipit"
  spec.summary       = %q{Rake helper and command line tool for zipping/unzipping project files. (Summary).}
  spec.description   = %q{Rake helper and command line tool for zipping/unzipping project files.}
  spec.email         = "alexander.shvets@gmail.com"
  spec.authors       = ["Alexander Shvets"]
  spec.homepage      = "http://github.com/shvets/zipit"
  spec.executables = ["zipit"]

  spec.files         = `git ls-files`.split($\)
  spec.test_files    = spec.files.grep(%r{^(test|spec|features)/})
  spec.require_paths = ["lib"]
  spec.version       = Zipit::VERSION
  spec.license       = "MIT"

  <%= project_dependencies %>
end
